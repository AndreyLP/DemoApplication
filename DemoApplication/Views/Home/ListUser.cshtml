@model IEnumerable<User>
@{
    Layout = "_Layout";
}
<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-right">ID</th>
        <th class="text-center">Логин</th>
        <th class="text-center">ФИО</th>
        <th class="text-center">Дата рождения</th>
        <th class="text-center">Email</th>
        <th class="text-center">Телефон</th>
        <th class="text-center"></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td class="text-right">@item.UserID</td>
            <td class="text-center">@item.Login</td>
            <td class="text-center">@item.FullName</td>
            <td class="text-center">@item.BirthDate</td>
            <td class="text-center">@item.Email</td>
            <td class="text-center">@item.Phone</td>
            <td class="text-center">
                <form asp-action="Delete" method="post">
                    @*<a asp-action="RegistrationForm" class="btn btn-sm btn-warning"
                   asp-route-userID="@item.UserID">
                        Редактировать
                    </a>*@
                    <input type="hidden" name="UserID" value="@item.UserID" />
                    <button type="submit" class="btn btn-danger btn-sm">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
<div class="text-center">
    <a asp-action="Create" class="btn btn-primary">Добавить пользователя</a>
</div>