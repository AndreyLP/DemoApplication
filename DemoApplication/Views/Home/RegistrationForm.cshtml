@model DemoApplication.Models.ViewModels.UserViewModel
@{
    Layout = "_Layout";
}
<div style="width:50%;margin-left:auto;margin-right:auto">
    <form asp-action="RegistrationForm" method="post">
        <input type="hidden" asp-for="UserID" />
        <div class="form-group">
            <label asp-for="Login">Логин</label>
            <div><span asp-validation-for="Login" class="text-danger"></span></div>
            <input asp-for="Login" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Пароль</label>
            <div><span asp-validation-for="Password" class="text-danger"></span></div>
            <input asp-for="Password" class="form-control" type="password" />
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword">Подтверждение пароля</label>
            <div><span asp-validation-for="ConfirmPassword" class="text-danger"></span></div>
            <input asp-for="ConfirmPassword" class="form-control" type="password" />
        </div>
        <div class="form-group">
            <label asp-for="FullName">ФИО</label>
            <div><span asp-validation-for="FullName" class="text-danger"></span></div>
            <input asp-for="FullName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="BirthDate">Дата рождения</label>
            <div><span asp-validation-for="BirthDate" class="text-danger"></span></div>
            <input asp-for="BirthDate" class="form-control" type="date" />
        </div>
        <div class="form-group">
            <label asp-for="Email">Электронная почта</label>
            <div><span asp-validation-for="Email" class="text-danger"></span></div>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Phone">Телефон</label>
            <div><span asp-validation-for="Phone" class="text-danger"></span></div>
            <input asp-for="Phone" class="form-control" />
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">Зарегистрироваться</button>
        </div>
    </form>
    @if (Model.Errors.Any())
    {
        @foreach (var err in Model.Errors)
        {
            <p>@err</p>
        }
    }
</div>